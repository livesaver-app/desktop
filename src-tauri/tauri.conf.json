{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "livesaver",
  "version": "0.1.0",
  "identifier": "com.magnuen2k.livesaver",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "LiveSaver",
        "width": 1000,
        "height": 800,
        "resizable": true,
        "decorations": true,
        "titleBarStyle": "Overlay"
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "draggable-window",
          "windows": [
            "*"
          ],
          "permissions": [
            "core:window:allow-start-dragging",
            "dialog:allow-open",
            "dialog:default",
            "core:event:allow-listen",
            "core:event:default",
            "shell:default",
            "oauth:allow-start",
            "oauth:allow-cancel"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
