{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "LiveSaver",
  "version": "0.4.2",
  "identifier": "app.livesaver",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "",
        "width": 1180,
        "height": 900,
        "resizable": true,
        "decorations": true,
        "titleBarStyle": "Overlay"
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "draggable-window",
          "windows": ["*"],
          "permissions": [
            "core:window:allow-start-dragging",
            "core:event:allow-listen",
            "core:event:default",
            "shell:default",
            "process:default",
            "dialog:allow-open",
            "dialog:default",
            "dialog:allow-ask",
            "dialog:allow-message",
            "updater:default",
            "updater:allow-check",
            "updater:allow-download-and-install",
            "process:allow-restart"
          ]
        }
      ]
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "windows": {
        "installMode": "passive"
      },
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDU5QURGMzBCOTg3RTY4ClJXUm9mcGdMODYxWkFQckRPaDFPYmR0dS9lQ3JNOGtPNGtBRGw3Nm0wMlNKNzBXZGpCRGExVU9RCg==",
      "endpoints": ["https://livesaver.app/api/update/latest"]
    }
  }
}
